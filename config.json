{
  "rules": [
    {
      "condition": {
        "eventType": "accelerometer",
        "comparison": "eq",
        "threshold": 0,
        "periodical": true,
        "attribute": {
          "calculate": "count",
          "period": {
            "value": 5,
            "unit": "minutes"
          }
        }
      },
      "actions": {
        "type": "webhook",
        "url": "https://noMessagesOverThePeriod.com"
      }
    },
    {
      "condition": {
        "eventType": "temperature",
        "comparison": "gt",
        "threshold": 0,
        "attribute": {
          "name": "value"
        }
      },
      "actions": {
        "type": "webhook",
        "url": "https://temperatureGreaterThanTriggered.com"
      }
    },
    {
      "condition": {
        "eventType": "temperature",
        "comparison": "gt",
        "threshold": 0,
        "attribute": {
          "name": "value",
          "calculate": "percentChange",
          "period": {
            "value": 5,
            "unit": "days"
          }
        }
      },
      "actions": {
        "type": "webhook",
        "url": "https://temperaturePercentChangeTriggered.com"
      }
    }
  ]
}
